{
  "name": "@vibeclasses/github-graphql-client",
  "version": "1.4.0",
  "description": "TypeScript client for GitHub GraphQL API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node examples/usage-examples.ts",
    "start": "node dist/examples/usage-examples.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.8",
    "@types/node-fetch": "^2.6.12",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "jest": "^29.0.0",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^4.9.0",
    "typescript-eslint": "^8.34.1"
  },
  "keywords": [
    "github",
    "graphql",
    "api",
    "typescript",
    "pull-requests",
    "comments"
  ],
  "author": "Marco Antonio Gonzalez Junior <m@rco.sh>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vibeclasses/github-graphql-client.git"
  }
}
